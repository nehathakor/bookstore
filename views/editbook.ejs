<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap">
    <link href="output.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }
        h1,
        h2,
        h3,
        a {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="bg-slate-50">

    <nav class="bg-rose-600 shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex-shrink-0">
                    <a href="/" class="text-2xl font-bold text-gray-100">EpicReads</a>
                </div>
            </div>
        </div>
    </nav>

    <section class="py-5">
        <h2 class="text-3xl font-bold text-center py-8 mb-4 text-rose-600">Your Books</h2>
        <div class="container mx-auto px-4">
        <% if (books && books.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8">
           <% books.forEach(item => { %>
    
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="h-50 w-full overflow-hidden">
                <img src="<%= item.coverimage %>" alt="Book 1" class="w-full h-full object-cover">
                </div>
                <div class="p-4">
                    <div class="flex justify-around">
                        <form action="/book/<%= item._id%>?_method=DELETE" method="POST">
                        <button type="submit"class="text-gray-600">
                            Delete
                        </button>
                       </form>
                       <a href="/edit/<%= item._id %>" class="text-gray-600 hover:text-red-600">Edit</a>
                    </div>
                </div>
            </div>    
            <% }) %>  
        </div>
        <% } else { %>
            <p>No books found</p>
        <% } %>
        </div>
        </section>
</body>
</html>
